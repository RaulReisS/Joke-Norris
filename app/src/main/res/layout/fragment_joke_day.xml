<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgJokeDay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1"
        android:contentDescription="@null"
        android:src="@color/white"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <TextView
        tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer vehicula sollicitudin ex. Sed mollis purus."
        android:id="@+id/txvJokeDay"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="50dp"
        app:layout_constraintTop_toBottomOf="@id/imgJokeDay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@drawable/baseline_refresh_24"
        android:layout_width="wrap_content"
        android:contentDescription="@null"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:id="@+id/progressJokeDay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>